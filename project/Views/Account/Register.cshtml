@model RegisterViewModel
@{
    ViewData["Title"] = "Sign up";
}

<style>
    .vertical {
        margin-top: 70px;
        border-left: 1px solid #EEEEEE;
        height: 200px;
        position: absolute;
        left: 45%;
    }
    img {
        margin-top: 40px;
        height: auto;
        width: 85%;
    }
    
</style>
<div class="row">
    <div class="vertical"></div>
    <div class="col-lg-6">
        <img src="~/images/undraw_add_user_ipe3.svg" alt="Los Angeles">
    </div>
    <div class="col-md-4">
        <h2>@ViewData["Title"]</h2>

        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"><i class="far fa-plus-square fa-lg"></i> Register</button>
            <a class="btn btn-info" style="width:auto" asp-action="ListUsers" asp-controller="administration"> <i class="fas fa-redo fa-lg"></i> Back</a>
        </form>
    </div>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
