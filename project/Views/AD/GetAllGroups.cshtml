@model IEnumerable<project.Models.Group>

@{
    ViewBag.Title = "GetAllGroups";
}

<h2>GetAllGroups <a asp-area="" asp-controller="AD" asp-action="Index"><i class="fa fa-times fa-lag" aria-hidden="true" title="Back"></i></a></h2>
<br />
@Html.Raw(TempData["msg"])

<div style="text-align:center;margin-bottom:20px">
    <a asp-area="" asp-controller="AD" asp-action="workgroup" class="btn btn-info">
        <i class="fa fa-user-plus" aria-hidden="true"></i>
        Add_User_To_Group
    </a>
    <a asp-area="" asp-controller="AD" asp-action="Groupuser" class="btn btn-danger">
        <i class="fa fa-user-plus" aria-hidden="true"></i>
        Remove_User_From_Group
    </a>
</div>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)

        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)

            </td>
            <td>
                <i class="fa fa-trash" aria-hidden="true"></i>

                @Html.ActionLink("DeleteGroup", "DeleteGroup", new { groupName = item.GroupName })
            </td>

        </tr>
    }
</table>