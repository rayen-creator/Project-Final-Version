@model project.Models.User

@{
    ViewData["Title"] = "Add User To Group";
}
<style>
    .vertical {
        margin-top: 70px;
        border-left: 1px solid #EEEEEE;
        height: 200px;
        position: absolute;
        left: 45%;
    }
    img {
        margin-top: 40px;
        height: auto;
        width: 85%;
    }
</style>

<div class="row">
    <div class="vertical"></div>
    <div class="col-lg-6">
        <img src="~/images/undraw_selecting_team_8uux.svg" alt="Los Angeles">
    </div>
    <div class="col-md-4">
        <h2>@ViewData["Title"]<a asp-area="" asp-controller="AD" asp-action="GetAllGroups"><i class="fa fa-times fa-lag" aria-hidden="true" title="Back"></i></a></h2>
        <br />

        <form asp-action="AddUserToGroup" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Samaccountname"></label>
                <input asp-for="Samaccountname" class="form-control" placeholder="Name">
                <span asp-validation-for="Samaccountname" class="text-danger"></span><br />
            </div>

            <div class="form-group">
                <label asp-for="GroupName"></label>
                <input asp-for="GroupName" class="form-control" placeholder=" ">
                <span asp-validation-for="GroupName" class="text-danger"></span><br />
            </div>

            <button type="submit" class="btn btn-primary" style="width:auto">
                <i class="fa fa-trash" aria-hidden="true"></i>
                Save
            </button>
        </form>
    </div>


</div>
