@model User
@{
    ViewData["Title"] = "Change Password";
}
<style>
    .vertical {
        margin-top: 70px;
        border-left: 1px solid #EEEEEE;
        height: 200px;
        position: absolute;
        left: 45%;
    }

    img {
        margin-top: 40px;
        height: auto;
        width: 85%;
    }
</style>
<div class="row">
    <div class="vertical"></div>
    <div class="col-lg-6">
        <img src="~/images/undraw_Throw_away_re_x60k.svg" alt="Los Angeles">
    </div>
    <div class="col-md-4">
        <h2>Change Password <a asp-area="" asp-controller="AD" asp-action="GetAllUsers"><i class="fa fa-times fa-lag" aria-hidden="true" title="Back"></i></a></h2>
        
        <div style="text-align:center;color:red;margin-bottom:30px;margin-top:20px">
            <h4><i class="fa fa-exclamation-triangle fa-lag" aria-hidden="true"></i> BE AWARE THOSE ARE SENSITIVE DATA ANYTHING WRONG MAY TRIGGER AN ERROR PAGE  </h4>
        </div>
        <form asp-action="ResetPasswordWithfield" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger">
            </div>


            <div class="form-group">
                <label asp-for="Samaccountname" ></label>
                <input asp-for="Samaccountname" class="form-control" placeholder="Name">
                <span asp-validation-for="Samaccountname" class="text-danger"></span><br />
            </div>

            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" placeholder="Password between [A-Z] , [a-z] , [0-9] , special character ">
                <span asp-validation-for="NewPassword" class="text-danger"></span><br />
            </div>

            <button type="submit" class="btn btn-primary" style="width:auto">
                <i class="far fa-plus-square fa-lg"></i> Save
            </button>
        </form>
    </div>
</div>
